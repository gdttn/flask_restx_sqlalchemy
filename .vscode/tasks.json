{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sphinx-apidoc",
            "type": "shell",
            "command": "sphinx-apidoc",
            "args": [
                "-o",
                "${workspaceFolder}/doc_src/source/",
                "${workspaceFolder}/flask_restx_sqlalchemy/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx Documentation : Make",
            "type": "shell",
            "command": "sphinx-build",
            "dependsOn": "sphinx-apidoc",
            "args": [
                "-M",
                "html",
                "${workspaceFolder}/doc_src/source",
                "${workspaceFolder}/doc_src/build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx Documentation : Copy",
            "type": "shell",
            "command": "cp",
            "args": [
                "-rf",
                "${workspaceFolder}/doc_src/build/html/.",
                "${workspaceFolder}/docs"
            ],
            "problemMatcher": []
        },
        {
            "label": "Coverage : Copy",
            "type": "shell",
            "command": "cp",
            "args": [
                "-rf",
                "${workspaceFolder}/htmlcov/",
                "${workspaceFolder}/docs/cover/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Doumentation Service",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "8000",
                "--bind",
                "127.0.0.1",
                "--directory",
                "${workspaceFolder}/doc_src/build/html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Lint ALL",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pylint",
                "--rcfile=${workspaceFolder}/.pylintrc",
                "flask_restx_sqlalchemy"
            ],
            "problemMatcher": []
        },
        {
            "label": "Bandit",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "bandit",
                "-r",
                "flask_restx_sqlalchemy"
            ],
            "problemMatcher": []
        },
        {
            "label": "Coverage html",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pytest",
                "--cov-report",
                "html",
                "--cov=flask_restx_sqlalchemy/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Coverage Service",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "8001",
                "--bind",
                "127.0.0.1",
                "--directory",
                "${workspaceFolder}/htmlcov"
            ],
            "problemMatcher": []
        }
    ]
}